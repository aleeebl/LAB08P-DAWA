<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR DATOS DEL CLIENTE</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{cliente.idcli}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">NOMBRES</label>
                            <input class="form-control" type="text" name="nomcli" id="nomcli" placeholder="Name"
                                value="{{cliente.nomcli}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">APELLIDOS</label>
                            <input class="form-control" type="text" name="apecli" id="apecli" placeholder="Lastname"
                                value="{{cliente.apecli}}" required>
                        </div>
                        
                        <div class="input-group mt-2">
                            <label for="birthdate" class="input-group-text">FECHA DE NAC.</label>
                            <input class="form-control" type="date" name="fechancli" id="fechancli"
                                value="{{cliente.fechancli}}" placeholder="Birthdate" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="address" class="input-group-text">DIRECCION</label>
                            <input class="form-control" type="text" name="dircli" id="dircli" placeholder="Direction"
                                value="{{cliente.dircli}}" required>
                        </div>

                        <div class="form-group mt-4 d-flex gap-2">
                            <button class="btn btn-success flex-fill">SAVE</button>
                            <button class="btn btn-danger flex-fill">
                                <a class="nav-link link-light" aria-current="page" href="/list">CANCEL</a>
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
