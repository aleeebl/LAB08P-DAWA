<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">SELECCIONAR OTRA PELICULA</h3>
                </div>
                <div class="card-body">

                    <form action="/editp/{{pelicula.id_pel}}" method="post">
                        
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">PELICULA / SERIE</label>
                            <input class="form-control" type="text" name="nom_pel" id="nom_pel" placeholder="Name"
                                value="{{pelicula.nom_pel}}" autofocus required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="duration" class="input-group-text">DURACION</label>
                            <input class="form-control" type="time" name="dur_pel" id="dur_pel" placeholder="Duration Time"
                                value="{{pelicula.dur_pel}}" required>
                        </div>
                        
                        <div class="input-group mt-2">
                            <label for="description" class="input-group-text">DESCRIPCION</label>
                            <input class="form-control" type="text" name="des_pel" id="des_pel"
                                value="{{pelicula.des_pel}}" placeholder="Description" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="year" class="input-group-text">AÑO</label>
                              <select class="form-control" name="anio_pel" id="anio_pel"  value="{{pelicula.anio_pel}}" required>
                                    <option value="" disabled selected>release year</option>
                                    <option value="2023">2023</option>
                                    <option value="2022">2022</option>
                                    <option value="2021">2021</option>
                                    <option value="2020">2020</option>
                                </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="category" class="input-group-text">CATEGORIA</label>
                            <select class="form-control" name="cat_pel" id="cat_pel" value="{{pelicula.cat_pel}}" required>
                                    <option value="" disabled selected>select the category </option>
                                    <option value="accion">Acción</option>
                                    <option value="comedia">Comedia</option>
                                    <option value="drama">Drama</option>
                                    <option value="terror">Romance</option>
                                </select>
                        </div>

                        <div class="form-group mt-4 d-flex gap-2">
                            <button class="btn btn-success flex-fill">SAVE</button>
                            <button class="btn btn-danger flex-fill">
                                <a class="nav-link link-light" aria-current="page" href="/listp">CANCEL</a>
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
